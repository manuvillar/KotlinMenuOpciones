<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView informativo -->
    <!-- Muestra instrucciones al usuario sobre cómo usar los menús -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mantén pulsada la imagen para ver el menú contextual"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView para demostrar el Menú Contextual -->
    <!-- Al mantener pulsada esta imagen, aparecerá el menú contextual -->
    <!-- IMPORTANTE: Esta vista está registrada en onCreate() con registerForContextMenu() -->
    <ImageView
        android:id="@+id/idimageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Imagen para menú contextual"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!-- Botón para mostrar el Menú Popup -->
    <!-- Al hacer clic en este botón, aparecerá un menú emergente -->
    <Button
        android:id="@+id/idBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mostrar Menú Popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idimageView1" />

    <!--
    - El TextView usa android:id para identificarse, lo usamos con binding.textView
    - El ImageView tiene un listener contextual registrado en el código
    - El Button tiene un OnClickListener definido en onCreate()

    Recordad que con ViewBinding accedemos a estas vistas usando:
    - binding.textView
    - binding.idimageView1
    - binding.idBoton
    -->

</androidx.constraintlayout.widget.ConstraintLayout>